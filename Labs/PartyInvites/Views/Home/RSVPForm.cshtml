@model PartyInvites.Models.GuestResponse

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <meta name="viewport" content="width=device-width" />
    <title>RSVPForm</title>
</head>
<body>
    <div class="panel panel-success text-center">
        <h1 class="display-3" style="color:#3e9ccf">RSVP</h1>
        <hr />
        <div class="panel-body">
            <form class="p-a-1 rsvp" asp-action="RSVPForm" method="post">
                <div asp-validation-summary="All"></div>
                <div class="form-group">
                    <label asp-for="Name">Your Name:</label>
                    <input class="form-control" asp-for="Name" />
                </div>
                <div class="form-group">
                    <label asp-for="Email">Your Email:</label>
                    <input class="form-control" asp-for="Email" />
                </div>
                <p>
                    <label asp-for="Phone">Your Phone:</label>
                    <input class="form-control" asp-for="Phone" />
                </p>
                <div class="form-group">
                    <label>Will you attend?</label>
                    <select class="form-control" asp-for="WillAttend">
                        <option value="">Choose an option</option>
                        <option value="true">Yes, I'll be there</option>
                        <option value="false">NO, I can't come</option>
                    </select>
                </div>
                <button class="btn btn-primary" type="submit">Submit RSVP</button>
            </form>
        </div>
    </div>
</body>
</html>
